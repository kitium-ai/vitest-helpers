{
  "name": "@kitiumai/vitest-helpers",
  "version": "1.0.0",
  "description": "Vitest test helpers with framework-specific utilities",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kitium-ai/vitest-helpers.git"
  },
  "homepage": "https://github.com/kitium-ai/vitest-helpers#readme",
  "bugs": {
    "url": "https://github.com/kitium-ai/vitest-helpers/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./setup": {
      "types": "./dist/setup/index.d.ts",
      "default": "./dist/setup/index.js"
    },
    "./compatibility": {
      "types": "./dist/compatibility/index.d.ts",
      "default": "./dist/compatibility/index.js"
    },
    "./browser": {
      "types": "./dist/browser/index.d.ts",
      "default": "./dist/browser/index.js"
    },
    "./benchmarks": {
      "types": "./dist/benchmarks/index.d.ts",
      "default": "./dist/benchmarks/index.js"
    },
    "./reporters": {
      "types": "./dist/reporters/index.d.ts",
      "default": "./dist/reporters/index.js"
    },
    "./tracing": {
      "types": "./dist/tracing/index.d.ts",
      "default": "./dist/tracing/index.js"
    },
    "./migration": {
      "types": "./dist/migration/index.d.ts",
      "default": "./dist/migration/index.js"
    },
    "./examples": {
      "types": "./dist/examples/index.d.ts",
      "default": "./dist/examples/index.js"
    },
    "./config": {
      "types": "./dist/config/index.d.ts",
      "default": "./dist/config/index.js"
    },
    "./lint": {
      "types": "./dist/lint/index.d.ts",
      "default": "./dist/lint/index.js"
    },
    "./tooling": {
      "types": "./dist/tooling/index.d.ts",
      "default": "./dist/tooling/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc -b",
    "build:clean": "npm run clean && npm run build",
    "watch": "tsc --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc -b --noEmit",
    "type-check": "tsc -b --noEmit",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:ui": "vit est --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "format:check": "prettier --check .",
    "changeset": "ensure-changeset && changeset",
    "version": "changeset version",
    "publish:set-token": "set-npm-token",
    "publish:setup": "set-npm-token",
    "publish:check": "npm whoami --registry https://registry.npmjs.org || npm login --registry https://registry.npmjs.org",
    "publish:login": "npm login --registry https://registry.npmjs.org",
    "publish:package": "pnpm run publish:check && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org",
    "publish:package:token": "pnpm run publish:setup && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org",
    "publish:package:otp": "pnpm run publish:check && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org --otp",
    "publish:dry-run": "pnpm publish --access public --no-git-checks --dry-run --registry https://registry.npmjs.org",
    "publish:dry-run:token": "pnpm run publish:setup && pnpm publish --access public --no-git-checks --dry-run --registry https://registry.npmjs.org",
    "prepublishOnly": "npm run verify",
    "verify": "npm run lint && npm run build",
    "release": "pnpm version && pnpm install --lockfile-only"
  },
  "dependencies": {
    "@kitiumai/config": "^0.1.4",
    "@kitiumai/lint": "^1.3.5",
    "@kitiumai/logger": "^1.5.0",
    "@kitiumai/scripts": "^0.2.1",
    "@kitiumai/test-core": "^1.0.1"
  },
  "peerDependencies": {
    "vitest": "^1.0.0 || ^2.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "@vitest/ui": {
      "optional": true
    },
    "@vitest/browser": {
      "optional": true
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "pnpm": {
    "overrides": {
      "lodash.get": "npm:lodash@^4.17.21",
      "subscriptions-transport-ws": "^0.9.19"
    }
  }
}
